<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/Dashboard.css">
  <link rel="stylesheet" href="/stylesheets/jobPostPopUp.css">
  <link rel="stylesheet" href="/stylesheets/adminDashboard.css">
  <script src="https://kit.fontawesome.com/4800d7071c.js" crossorigin="anonymous"></script>
  <title>Student Dashboard</title>
</head>

<body>
  <div class="sidebar">
    <div class="logo">
      <img src="/images/logoPU.jpg" alt="University Logo" width="50" height="50">
    </div>
    <nav>
      <ul>
        <li><a href="#"><i class="fa-solid fa-gauge-simple-high"></i>Dashboard</a></li>
        <li><a href="/student/jobs"><i class="fa-solid fa-suitcase"></i>Job</a></li>
        <li><a href="/student/StudentProfile"><i class="fa-solid fa-user"></i>Profile</a></li>
        <li><a href="/student/ResumeFrontPage"><i class="fa-solid fa-regular fa-file"></i>Resume Building</a></li>
      </ul>
    </nav>
  </div>
  <div class="navbar">
    <div class="search-box">
      <input type="text" placeholder="Search...">
    </div>
    <div class="right-item">
      <div class="notification">
        <a href="#notificaion"><i class="fa-regular fa-bell fa-2x"></i></a>
      </div>
      <div class="profile">
        <img class="profile-img" src="university_logo.png" width="35" height="35">
      </div>
    </div>
  </div>
  <div class="main-content">
    <h1>Recent Job Posts</h1>
<ul class="dataUL">
  <% jobs.forEach(job => { %>
    <li class="dataList">
      <h2><%= job.companyName %></h2>
      <p>Location: <%= job.location %></p>
      <p>Job Role: <%= job.jobRole %></p>
      <p>Salary: <%= job.salary %></p>
      
      <p>Description: <%= job.jobDesc %></p>
      <p>Apply Link: <a href="<%= job.applyLink %>"><%= job.applyLink %></a></p>
      <p>Last Date: <%= job.lastDate.toDateString() %></p>
    </li>
  <% }); %>
</ul>
</div>


</body>

</html>